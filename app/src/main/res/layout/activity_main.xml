<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                style="@style/TeamNameText"
                android:text="@string/teamA"
                />

            <TextView
                style="@style/TeamScoreText"
                android:id="@+id/team_a_score"
                android:text="0"
                />

            <Button
                style="@style/ButtonText"
                android:onClick="addThreeToScore"
                android:text="@string/threePoints"
                />

            <Button
                style="@style/ButtonText"
                android:onClick="addTwoToScore"
                android:text="@string/twoPoints"
                />

            <Button
                style="@style/ButtonText"
                android:onClick="addOneToScore"
                android:text="@string/onePoint"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                style="@style/TeamNameText"
                android:text="@string/teamB"
                />

            <TextView
                style="@style/TeamScoreText"
                android:id="@+id/team_b_score"
                android:text="0"
                />

            <Button
                style="@style/ButtonText"
                android:onClick="addThreeToScoreForB"
                android:text="@string/threePoints"
                />

            <Button
                style="@style/ButtonText"
                android:onClick="addTwoToScoreForB"
                android:text="@string/twoPoints"
                />

            <Button
                style="@style/ButtonText"
                android:onClick="addOneToScoreForB"
                android:text="@string/onePoint"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        style="@style/ResetButtonStyle"
        android:onClick="resetScore"
        android:text="@string/resetScores"
        />

</RelativeLayout>